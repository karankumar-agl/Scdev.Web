@using Scdev.Web.Models
@using Glass.Mapper.Sc.Web.Mvc;
@model IAboutViewModel

@if (Model != null)
{
    <!-- About Start -->
    <div class="about wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="about-img">                       
                        @Html.Glass().Editable(x => x.Image)
                    </div>
                </div>
                <div class="col-lg-7 col-md-6">
                    <div class="section-header text-left">
                        <p> @Html.Glass().Editable(x => x.Title) </p>
                        <h2>@Html.Glass().Editable(x => x.Sub_Title)</h2>
                    </div>
                    <div class="about-text">
                        @Html.Glass().Editable(x => x.Description)
                        @Html.Glass().Editable(x => x.Call_To_Action, new { @class = "btn" })

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
}
